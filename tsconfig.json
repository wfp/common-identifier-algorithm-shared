{
    "compilerOptions": {
      "target": "ESNext",
      "outDir": "lib",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "strict": true
      // TODO: Enable these when we can:
      // "noUncheckedIndexedAccess": true,
      // "exactOptionalPropertyTypes": true
      // Enable for debug, but keep disabled after that as it slows down builds a lot
      // "noErrorTruncation": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "dist", "tmp", "examples"]
  }